{
  "$schema": "./node_modules/turbo/schema.json",
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "storybook-static/**"],
      "dependsOn": ["^build"]
    },

    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },

    "lint": {
      "cache": true,
      "outputs": []
    },

    "lint:fix": {
      "cache": false,
      "outputs": []
    },

    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },

    "clean": {
      "cache": false
    }
  }
}
